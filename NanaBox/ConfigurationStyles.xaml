<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <Style TargetType="Grid" x:Key="ConfigurationBlockStyle">
    <Setter Target="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <Setter Target="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
    <Setter Target="BorderThickness" Value="1"/>
    <Setter Target="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
    <Setter Target="Padding" Value="16"/>
    <Setter Target="Margin" Value="0,0,0,4"/>
    <Setter Target="MinHeight" Value="72"/>
  </Style>

  <Style TargetType="TextBox" x:Key="ConfigurationBlockTextBoxStyle" BasedOn="{StaticResource DefaultTextBoxStyle}">
    <Setter Target="VerticalAlignment" Value="Center"/>
    <Setter Target="Height" Value="32px"/>
  </Style>

  <Style TargetType="ComboBox" x:Key="ConfigurationBlockComboBoxStyle" BasedOn="{StaticResource DefaultComboBoxStyle}">
    <Setter Target="VerticalAlignment" Value="Center"/>
    <Setter Target="Height" Value="32px"/>
  </Style>

  <Style TargetType="Grid" x:Key="ConfigurationExpanderContentBlockStyle">
    <Setter Target="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
    <Setter Target="Padding" Value="16"/>
    <Setter Target="Margin" Value="0,2,0,2"/>
  </Style>
</ResourceDictionary>
