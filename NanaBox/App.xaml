<MileXaml:Application
  x:Class="NanaBox.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:MileXaml="using:Mile.Xaml"
  xmlns:local="using:NanaBox">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="MinimalExpanderStyles.xaml"/>
        <MileXaml:XamlControlsResources />
      </ResourceDictionary.MergedDictionaries>
      <local:NegativeDoubleConverter x:Name="NegativeDoubleConverter"/>

      <Style TargetType="Grid" x:Name="SettingBlockStyle">
        <Setter Target="Background" Value="{StaticResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Target="BorderBrush" Value="{StaticResource CardStrokeColorDefaultBrush}"/>
        <Setter Target="BorderThickness" Value="1"/>
        <Setter Target="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
        <Setter Target="Padding" Value="16"/>
        <Setter Target="Margin" Value="0,2,0,2"/>
      </Style>

      <Style TargetType="Grid" x:Name="SettingExpanderContentBlockStyle">
        <Setter Target="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
        <Setter Target="Padding" Value="16"/>
        <Setter Target="Margin" Value="0,2,0,2"/>
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</MileXaml:Application>
